<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white_bg"
    android:focusable="true"
    android:focusableInTouchMode="true"
    tools:context="com.example.myapplication.begin.activity.ForgetActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_45"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_15">

        <ImageView
            android:id="@+id/image_back"
            android:layout_width="@dimen/dp_20"
            android:layout_height="@dimen/dp_18"
            android:layout_centerVertical="true"
            android:src="@drawable/image_left_back" />
    </RelativeLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_100"
            android:layout_marginRight="@dimen/dp_15"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/title_wjmm"
                android:textColor="@color/black_text"
                android:textSize="@dimen/sp_25" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_45"
                android:layout_marginTop="@dimen/dp_30">

                <EditText
                    android:id="@+id/ed_phone"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_45"
                    android:background="@null"
                    android:hint="@string/tishi_qtxsjhm"
                    android:inputType="number"
                    android:textColor="@color/black_text"
                    android:textSize="@dimen/sp_14" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_0_5"
                    android:layout_alignParentBottom="true"
                    android:background="@color/line_bg" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_45"
                android:layout_marginTop="@dimen/dp_10">

                <EditText
                    android:id="@+id/ed_code"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_45"
                    android:layout_marginRight="@dimen/dp_80"
                    android:background="@null"
                    android:hint="@string/tishi_qtxyzm"
                    android:inputType="number"
                    android:textColor="@color/black_text"
                    android:textSize="@dimen/sp_14" />

                <TextView
                    android:id="@+id/text_yzm"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:text="@string/text_hqyzm"
                    android:textColor="@color/lanse"
                    android:textSize="@dimen/sp_12" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_0_5"
                    android:layout_alignParentBottom="true"
                    android:background="@color/line_bg" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_45"
                android:layout_marginTop="@dimen/dp_10">

                <EditText
                    android:id="@+id/ed_pass"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_45"
                    android:background="@null"
                    android:hint="@string/tishi_qtxxmm"
                    android:inputType="textPassword"
                    android:textColor="@color/black_text"
                    android:textSize="@dimen/sp_14" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_0_5"
                    android:layout_alignParentBottom="true"
                    android:background="@color/line_bg" />

                <ImageView
                    android:id="@+id/image_pass1"
                    android:layout_width="@dimen/dp_15"
                    android:layout_height="@dimen/dp_10"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/dp_10"
                    android:src="@mipmap/image_zhengyan" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_45"
                android:layout_marginTop="@dimen/dp_10">

                <EditText
                    android:id="@+id/ed_pass2"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_45"
                    android:background="@null"
                    android:hint="@string/tishi_qzctxxmm"
                    android:inputType="textPassword"
                    android:textColor="@color/black_text"
                    android:textSize="@dimen/sp_14" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_0_5"
                    android:layout_alignParentBottom="true"
                    android:background="@color/line_bg" />

                <ImageView
                    android:id="@+id/image_pass2"
                    android:layout_width="@dimen/dp_15"
                    android:layout_height="@dimen/dp_10"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/dp_10"
                    android:src="@mipmap/image_zhengyan" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_45"
                android:layout_marginTop="@dimen/dp_10">

                <EditText
                    android:id="@+id/ed_pay_pass"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_45"
                    android:background="@null"
                    android:hint="@string/tishi_qtxxzfmm"
                    android:inputType="textPassword"
                    android:textColor="@color/black_text"
                    android:textSize="@dimen/sp_14" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_0_5"
                    android:layout_alignParentBottom="true"
                    android:background="@color/line_bg" />

                <ImageView
                    android:id="@+id/image_pay_pass1"
                    android:layout_width="@dimen/dp_15"
                    android:layout_height="@dimen/dp_10"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/dp_10"
                    android:src="@mipmap/image_zhengyan" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_45"
                android:layout_marginTop="@dimen/dp_10">

                <EditText
                    android:id="@+id/ed_pay_pass2"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_45"
                    android:background="@null"
                    android:hint="@string/text_qzctxxzfmm"
                    android:inputType="textPassword"
                    android:textColor="@color/black_text"
                    android:textSize="@dimen/sp_14" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_0_5"
                    android:layout_alignParentBottom="true"
                    android:background="@color/line_bg" />

                <ImageView
                    android:id="@+id/image_pay_pass2"
                    android:layout_width="@dimen/dp_15"
                    android:layout_height="@dimen/dp_10"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/dp_10"
                    android:src="@mipmap/image_zhengyan" />
            </RelativeLayout>

            <TextView
                android:id="@+id/text_find"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_45"
                android:background="@drawable/zise_bg"
                android:layout_marginTop="@dimen/dp_50"
                android:layout_marginBottom="@dimen/dp_50"
                android:gravity="center"
                android:text="@string/text_zhmm"
                android:textColor="@color/white_text"
                android:textSize="@dimen/sp_15"
                android:textStyle="bold" />
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</RelativeLayout>
