<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white_bg"
    tools:context=".wode.activity.WenTiActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_45">

        <ImageButton
            android:id="@+id/back"
            android:layout_width="@dimen/dp_45"
            android:layout_height="@dimen/dp_45"
            android:layout_centerVertical="true"
            android:background="@null"
            android:src="@mipmap/back"
            android:textAllCaps="false" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="常见问题"
            android:textColor="@color/black_text"
            android:textSize="@dimen/sp_17" />
    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_8"
        android:background="@color/ed_bg"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_15">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:id="@+id/rela_bt2"
                android:layout_width="@dimen/dp_22"
                android:layout_height="@dimen/dp_20"
                android:layout_marginTop="@dimen/dp_2"
                android:background="@mipmap/wt_bg">

                <TextView
                    android:layout_width="@dimen/dp_22"
                    android:layout_height="@dimen/dp_16"
                    android:textColor="@color/white_text"
                    android:gravity="center"
                    android:textSize="@dimen/sp_13"
                    android:text="01" />
            </RelativeLayout>

            <TextView
                android:id="@+id/text_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_14"
                android:text="手机兼容性要求？"
                android:layout_toRightOf="@+id/rela_bt2"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_30"
                android:ellipsize="end"
                android:singleLine="true"
                android:textColor="@color/black_text"/>

            <ImageView
                android:layout_width="@dimen/dp_10"
                android:layout_height="@dimen/dp_7"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@mipmap/wt_top"/>
        </RelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_14"
            android:visibility="visible"
            android:layout_marginLeft="@dimen/dp_30"
            android:layout_marginTop="@dimen/dp_30"
            android:lineSpacingExtra="@dimen/dp_5"
            android:text="手机兼容性要求手机兼容性要求手机兼容性要求手机兼容性要求手机兼容性要求"
            android:textColor="@color/textcolor2"/>
    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0_5"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="@dimen/dp_15"
        android:background="@color/line_bg"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_15">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:id="@+id/rela_bt"
                android:layout_width="@dimen/dp_22"
                android:layout_height="@dimen/dp_20"
                android:layout_marginTop="@dimen/dp_2"
                android:background="@mipmap/wt_bg">

                <TextView
                    android:layout_width="@dimen/dp_22"
                    android:layout_height="@dimen/dp_16"
                    android:textColor="@color/white_text"
                    android:gravity="center"
                    android:textSize="@dimen/sp_13"
                    android:text="02" />
            </RelativeLayout>

            <TextView
                android:id="@+id/text_title2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_14"
                android:text="我如何使用简单借款进行借钱？"
                android:layout_toRightOf="@+id/rela_bt"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_30"
                android:ellipsize="end"
                android:singleLine="true"
                android:textColor="@color/black_text"/>

            <ImageView
                android:layout_width="@dimen/dp_10"
                android:layout_height="@dimen/dp_7"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@mipmap/wt_bottom"/>
        </RelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_14"
            android:visibility="gone"
            android:layout_marginLeft="@dimen/dp_30"
            android:layout_marginTop="@dimen/dp_30"
            android:lineSpacingExtra="@dimen/dp_5"
            android:text="手机兼容性要求手机兼容性要求手机兼容性要求手机兼容性要求手机兼容性要求"
            android:textColor="@color/textcolor2"/>
    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0_5"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="@dimen/dp_15"
        android:background="@color/line_bg"/>
</LinearLayout>