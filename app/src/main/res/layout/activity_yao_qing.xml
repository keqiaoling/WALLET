<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/yq_bg"
    tools:context=".wode.activity.YaoQingActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_500"
        android:background="@mipmap/yq_hbg"
        android:layout_marginLeft="@dimen/dp_30"
        android:layout_marginRight="@dimen/dp_30"
        android:layout_centerInParent="true">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@mipmap/yq_yqhy"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_centerHorizontal="true"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_centerHorizontal="true">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@mipmap/yq_title"
                android:layout_marginTop="@dimen/dp_50"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_14"
                android:layout_marginTop="@dimen/dp_10"
                android:orientation="horizontal"
                android:layout_gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp_12"
                    android:textColor="@color/black_text"
                    android:text="邀请码:"
                    android:textStyle="bold"
                    android:gravity="center"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp_12"
                    android:layout_marginLeft="@dimen/dp_5"
                    android:textColor="@color/black_text"
                    android:text="nVsZ1"
                    android:gravity="center"/>
            </LinearLayout>

            <ImageView
                android:layout_width="@dimen/dp_140"
                android:layout_height="@dimen/dp_28"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/dp_12"
                android:background="@mipmap/yq_fzyqm"/>
        </LinearLayout>

        <ImageView
            android:id="@+id/image_erWeiMa"
            android:layout_width="@dimen/dp_140"
            android:layout_height="@dimen/dp_140"
            android:background="@color/black_text"
            android:layout_centerInParent="true"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_12"
            android:textColor="@color/white_text"
            android:layout_centerHorizontal="true"
            android:layout_above="@+id/image_erWeiMa"
            android:layout_marginBottom="@dimen/dp_10"
            android:text="+601****3991 share"/>

        <TextView
            android:id="@+id/text_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_12"
            android:textColor="@color/white_text"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/image_erWeiMa"
            android:layout_marginTop="@dimen/dp_15"
            android:text="扫描二维码注册并下载应用程序"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_12"
            android:textColor="@color/white_text"
            android:gravity="center"
            android:layout_marginLeft="@dimen/dp_30"
            android:layout_marginRight="@dimen/dp_30"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/text_title"
            android:layout_marginTop="@dimen/dp_20"
            android:text="https://www.iconfont.cn/search/"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="@dimen/dp_30"
            android:layout_alignParentBottom="true">

            <RelativeLayout
                android:layout_width="@dimen/dp_0"
                android:layout_weight="1"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="@dimen/dp_40"
                        android:layout_height="@dimen/dp_40"
                        android:layout_gravity="center"
                        android:background="@mipmap/yq_fuzhi"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/sp_14"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/dp_5"
                        android:textColor="@color/white_text"
                        android:text="复制链接"/>
                </LinearLayout>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="@dimen/dp_0"
                android:layout_weight="1"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="@dimen/dp_40"
                        android:layout_height="@dimen/dp_40"
                        android:layout_gravity="center"
                        android:background="@mipmap/yq_baocun"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/sp_14"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/dp_5"
                        android:textColor="@color/white_text"
                        android:text="保存图片"/>
                </LinearLayout>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="@dimen/dp_0"
                android:layout_weight="1"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="@dimen/dp_40"
                        android:layout_height="@dimen/dp_40"
                        android:layout_gravity="center"
                        android:background="@mipmap/yq_fx"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/sp_14"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/dp_5"
                        android:textColor="@color/white_text"
                        android:text="分享到朋友圈"/>
                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>