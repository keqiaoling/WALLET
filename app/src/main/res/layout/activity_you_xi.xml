<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white_bg"
    tools:context=".faxian.activity.YouXiActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_45">

        <ImageButton
            android:id="@+id/back"
            android:layout_width="@dimen/dp_45"
            android:layout_height="@dimen/dp_45"
            android:layout_centerVertical="true"
            android:background="@null"
            android:src="@mipmap/back"
            android:textAllCaps="false" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/text_youxi"
            android:textColor="@color/black_text"
            android:textSize="@dimen/sp_17" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_380">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_200">

            <RelativeLayout
                android:layout_width="@dimen/dp_190"
                android:layout_height="@dimen/dp_200"
                android:background="@mipmap/yx_fb_bg">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/dp_35"
                    android:layout_marginRight="@dimen/dp_35"
                    android:layout_marginTop="@dimen/dp_15"
                    android:layout_marginBottom="@dimen/dp_25">

                    <ImageView
                        android:id="@+id/image1"
                        android:layout_width="@dimen/dp_18"
                        android:layout_height="@dimen/dp_15"
                        android:background="@mipmap/yx_douhao"
                        android:layout_marginTop="@dimen/dp_15"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/sp_20"
                        android:textColor="@color/white_text"
                        android:textStyle="bold"
                        android:layout_below="@+id/image1"
                        android:layout_marginTop="@dimen/dp_10"
                        android:text="Fortune Bit"/>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_marginBottom="@dimen/dp_25">

                        <ImageView
                            android:layout_width="@dimen/dp_40"
                            android:layout_height="@dimen/dp_40"
                            android:background="@mipmap/yx_bt"/>

                        <ImageView
                            android:layout_width="@dimen/dp_23"
                            android:layout_height="@dimen/dp_14"
                            android:background="@mipmap/yx_jiantou"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"/>
                    </RelativeLayout>
                </RelativeLayout>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="@dimen/dp_190"
                android:layout_height="@dimen/dp_200"
                android:layout_alignParentRight="true"
                android:background="@mipmap/yx_ggl_bg">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/dp_35"
                    android:layout_marginRight="@dimen/dp_35"
                    android:layout_marginTop="@dimen/dp_15"
                    android:layout_marginBottom="@dimen/dp_25">

                    <ImageView
                        android:id="@+id/image_ggg"
                        android:layout_width="@dimen/dp_18"
                        android:layout_height="@dimen/dp_15"
                        android:background="@mipmap/yx_douhao"
                        android:layout_marginTop="@dimen/dp_15"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/sp_20"
                        android:textColor="@color/white_text"
                        android:textStyle="bold"
                        android:layout_below="@+id/image_ggg"
                        android:layout_marginTop="@dimen/dp_10"
                        android:text="刮刮乐"/>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_marginBottom="@dimen/dp_25">

                        <ImageView
                            android:layout_width="@dimen/dp_40"
                            android:layout_height="@dimen/dp_40"
                            android:background="@mipmap/yx_ggl"/>

                        <ImageView
                            android:layout_width="@dimen/dp_23"
                            android:layout_height="@dimen/dp_14"
                            android:background="@mipmap/yx_jiantou"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"/>
                    </RelativeLayout>
                </RelativeLayout>
            </RelativeLayout>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="@dimen/dp_190"
            android:layout_height="@dimen/dp_200"
            android:layout_alignParentBottom="true"
            android:background="@mipmap/yx_sz_bg">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/dp_35"
                android:layout_marginRight="@dimen/dp_35"
                android:layout_marginTop="@dimen/dp_15"
                android:layout_marginBottom="@dimen/dp_25">

                <ImageView
                    android:id="@+id/image2"
                    android:layout_width="@dimen/dp_18"
                    android:layout_height="@dimen/dp_15"
                    android:background="@mipmap/yx_douhao"
                    android:layout_marginTop="@dimen/dp_15"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp_20"
                    android:textColor="@color/white_text"
                    android:textStyle="bold"
                    android:layout_below="@+id/image2"
                    android:layout_marginTop="@dimen/dp_10"
                    android:text="Dice骰子"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="@dimen/dp_25">

                    <ImageView
                        android:layout_width="@dimen/dp_40"
                        android:layout_height="@dimen/dp_40"
                        android:background="@mipmap/yx_sz"/>

                    <ImageView
                        android:layout_width="@dimen/dp_23"
                        android:layout_height="@dimen/dp_14"
                        android:background="@mipmap/yx_jiantou"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"/>
                </RelativeLayout>
            </RelativeLayout>
        </RelativeLayout>
    </RelativeLayout>
</LinearLayout>