<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white_bg"
    android:orientation="vertical"
    tools:context="com.example.myapplication.zixun.fragment.ZiXunFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_45">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/tab_zixun"
            android:textColor="@color/black_text"
            android:textSize="@dimen/sp_16" />
    </RelativeLayout>

    <!--<androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp_60"/>-->

    <RelativeLayout
        android:id="@+id/rela_item"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_75"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_15">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginRight="@dimen/dp_120"
            android:layout_centerVertical="true">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_14"
                android:textColor="@color/black_text"
                android:text="金色现场|V神:智能合约钱包是区块链应用的新趋势"
                android:ellipsize="end"
                android:singleLine="true"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_15"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="@dimen/dp_56"
                    android:layout_height="@dimen/dp_16"
                    android:background="@drawable/zixun_bg"
                    android:textSize="@dimen/sp_12"
                    android:text="X-Wallet"
                    android:gravity="center"
                    android:textColor="@color/lanse"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp_12"
                    android:textColor="@color/textcolor"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:text="今天12:09"/>
            </LinearLayout>
        </LinearLayout>

        <ImageView
            android:layout_width="@dimen/dp_100"
            android:layout_height="@dimen/dp_60"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:background="@mipmap/image_zx"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_75"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_15">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginRight="@dimen/dp_120"
            android:layout_centerVertical="true">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_14"
                android:textColor="@color/black_text"
                android:text="金色现场|V神:智能合约钱包是区块链应用的新趋势"
                android:ellipsize="end"
                android:singleLine="true"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_15"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="@dimen/dp_56"
                    android:layout_height="@dimen/dp_16"
                    android:background="@drawable/zixun_bg"
                    android:textSize="@dimen/sp_12"
                    android:text="X-Wallet"
                    android:gravity="center"
                    android:textColor="@color/lanse"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp_12"
                    android:textColor="@color/textcolor"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:text="今天12:09"/>
            </LinearLayout>
        </LinearLayout>

        <ImageView
            android:layout_width="@dimen/dp_100"
            android:layout_height="@dimen/dp_60"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:background="@mipmap/image_zx"/>
    </RelativeLayout>
</LinearLayout>
