<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_115"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_15"
        android:background="@drawable/baise_bg">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_15"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/text_numbery"
                android:layout_width="@dimen/dp_20"
                android:layout_height="@dimen/dp_20"
                android:textSize="@dimen/sp_14"
                android:textColor="@color/white_text"
                android:text=""
                android:textStyle="bold"
                android:gravity="center"
                android:layout_gravity="center"/>

            <TextView
                android:id="@+id/text_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_14"
                android:textColor="@color/black_text"
                android:layout_marginLeft="@dimen/dp_10"
                android:text="0配套"/>

            <TextView
                android:id="@+id/text_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/tz_qg_bg"
                android:textSize="@dimen/sp_13"
                android:textColor="@color/zise"
                android:paddingTop="@dimen/dp_3"
                android:paddingBottom="@dimen/dp_3"
                android:paddingLeft="@dimen/dp_10"
                android:paddingRight="@dimen/dp_10"
                android:layout_marginLeft="@dimen/dp_10"
                android:text="抢购中"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_40"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginBottom="@dimen/dp_20">

            <LinearLayout
                android:layout_width="@dimen/dp_0"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp_12"
                    android:textColor="@color/black_text"
                    android:text="@string/text_zsy"/>

                <TextView
                    android:id="@+id/text_zsy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp_14"
                    android:textStyle="bold"
                    android:textColor="@color/black_text"
                    android:layout_marginTop="@dimen/dp_5"
                    android:text="0%-0%"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="@dimen/dp_0"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp_12"
                    android:textColor="@color/black_text"
                    android:text="@string/text_rhsy"/>

                <TextView
                    android:id="@+id/text_shsy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp_14"
                    android:textStyle="bold"
                    android:textColor="@color/black_text"
                    android:layout_marginTop="@dimen/dp_5"
                    android:text="0%-0%"/>
            </LinearLayout>

            <RelativeLayout
                android:layout_width="@dimen/dp_0"
                android:layout_height="@dimen/dp_35"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/text_touzi"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp_30"
                    android:layout_weight="1"
                    android:layout_marginRight="@dimen/dp_15"
                    android:textColor="@color/white_text"
                    android:text="@string/text_ljtz"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:textSize="@dimen/sp_14"
                    android:layout_centerInParent="true"
                    android:gravity="center"
                    android:paddingLeft="@dimen/dp_10"
                    android:paddingRight="@dimen/dp_10"
                    android:layout_gravity="center"
                    android:background="@drawable/zise_bg"/>
            </RelativeLayout>
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>